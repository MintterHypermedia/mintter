{
  "name": "mintter",
  "version": "0.0.1",
  "description": "Mintter monorepo",
  "repository": "https://github.com/mintterteam/mintter",
  "author": "Mintter Team",
  "private": true,
  "scripts": {
    "prebuild": "yarn validate",
    "build": "yarn workspaces foreach -ptR --from '{@mintter/mttast,@mintter/app}' run build",
    "lint": "yarn workspaces foreach -ptR --from '{@mintter/mttast,@mintter/app}' run lint",
    "format": "yarn workspaces foreach -ptR --from '{@mintter/mttast,@mintter/app}' run format",
    "validate": "yarn workspaces foreach -ptR --from '{@mintter/mttast,@mintter/app}' run validate",
    "test": "yarn workspaces foreach -ptR --from '{@mintter/mttast,@mintter/app}' run test",
    "app": "yarn workspace @mintter/app",
    "mttast": "yarn workspace @mintter/mttast",
    "codegen": "graphql-codegen",
    "start": "./dev run-desktop",
    "start:s2": "./dev run-desktop -- --daemon-flags=\"--repo-path=~/.mtt2 --http-port='56001' --grpc-port='56002' --p2p.addr='/ip4/0.0.0.0/tcp/56000'\""
  },
  "workspaces": [
    "frontend/*"
  ],
  "devDependencies": {
    "covector": "^0.7.2",
    "eslint": "^8.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rollup": "^2.64.0",
    "ts-proto": "^1.83.0",
    "typescript": "4.4.4"
  },
  "packageManager": "yarn@3.1.0",
  "dependencies": {
    "@graphql-codegen/cli": "^2.3.0",
    "@graphql-codegen/typescript": "^2.4.1",
    "ni": "^0.0.2"
  }
}
