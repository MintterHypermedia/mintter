{
  "name": "mintter",
  "version": "0.0.1",
  "description": "Mintter monorepo",
  "main": "frontend/www/index.js",
  "repository": "https://github.com/mintterteam/mintter",
  "author": "Mintter Team",
  "private": true,
  "scripts": {
    "changeset": "changeset",
    "prebuild": "yarn validate",
    "build": "yarn app build",
    "test": "yarn workspaces run test",
    "lint": "yarn workspaces run lint",
    "format": "yarn workspaces run format",
    "validate": "yarn workspaces run validate",
    "ui": "yarn workspace @mintter/ui",
    "app": "yarn workspace @mintter/app",
    "client": "yarn workspace @mintter/client",
    "mttast": "yarn workspace @mintter/mttast",
    "builder": "yarn workspace @mintter/mttast-builder",
    "schema": "yarn workspace @mintter/mttast-schema",
    "clean": "gn gen out",
    "prepare": "husky install"
  },
  "workspaces": [
    "frontend/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.16.0",
    "@types/jest": "^25.1.3",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^6.10.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "tslib": "^1.11.1",
    "typescript": "^4.3.2"
  },
  "engines": {
    "yarn": "^1.18.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "lint-staged",
      "pre-commit": "yarn workspaces run precommit"
    }
  },
  "resolutions": {
    "styled-components": "^5.2.0"
  },
  "dependencies": {
    "prettier": "^2.3.1",
    "ts-proto": "^1.82.0"
  },
  "lint-staged": {
    "frontend/**/*.+(ts|tsx|json|js)": "yarn workspaces run precommit"
  }
}
