{
  "name": "mintter",
  "version": "0.0.1",
  "description": "Mintter monorepo",
  "main": "frontend/www/index.js",
  "repository": "https://github.com/mintterteam/mintter",
  "author": "Mintter Team",
  "private": true,
  "scripts": {
    "changeset": "changeset",
    "build": "yarn workspaces run build",
    "test": "yarn workspaces run test",
    "format": "yarn workspaces run format",
    "prettier": "prettier --ignore-path frontend/.gitignore \"frontend/**/*.+(js|jsx|ts|tsx|json|css)\"",
    "ui": "yarn workspace @mintter/ui",
    "app": "yarn workspace @mintter/app",
    "clean": "gn gen out"
  },
  "workspaces": [
    "frontend/app",
    "frontend/client",
    "frontend/ui"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.5.2",
    "@types/jest": "^25.1.3",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "tslib": "^1.11.1",
    "typescript": "^4.3.2"
  },
  "engines": {
    "yarn": "^1.18.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "frontend/**/*.+(js|jsx|ts|tsx|json|css)": [
      "yarn format",
      "yarn editor:build",
      "yarn site:test:precommit --bail â€”-findRelatedTests"
    ]
  },
  "resolutions": {
    "styled-components": "^5.2.0"
  }
}
