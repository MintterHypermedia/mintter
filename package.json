{
  "name": "mintter",
  "version": "0.0.1",
  "description": "Mintter monorepo",
  "main": "frontend/www/index.js",
  "repository": "https://github.com/mintterteam/mintter",
  "author": "Mintter Team",
  "private": true,
  "scripts": {
    "changeset": "changeset",
    "test": "echo 1",
    "build": "yarn workspaces run build",
    "site:export": "yarn workspace @mintter/site export",
    "release": "yarn build:all",
    "dev": "yarn workspace @mintter/site dev",
    "publish:all": "yarn workspaces run npm:publish",
    "lint": "yarn workspaces run lint",
    "check-types": "tsc",
    "prettier": "prettier --ignore-path .gitignore \"frontend/**/*.+(js|jsx|ts|tsx|json|css)\"",
    "format": "yarn prettier --write",
    "check-format": "yarn prettier --list-different",
    "validate": "npm-run-all --parallel check-format lint build"
  },
  "workspaces": [
    "frontend/www",
    "frontend/packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.5.1",
    "@types/jest": "^25.1.3",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "tsdx": "^0.12.3",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3"
  },
  "engines": {
    "yarn": "^1.22.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn check-types && lint-staged"
    }
  },
  "lint-staged": {
    "frontend/**/*.+(js|jsx|ts|tsx|json|css)": [
      "yarn format",
      "git add"
    ]
  }
}
