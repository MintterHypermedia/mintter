filegroup(
    name = "sqlite",
    srcs = glob(
        [
            "sqlite/**/*.go",
            "sqlite/**/*.c",
            "sqlite/**/*.h",
        ],
        exclude = ["sqlite/**/*_test.go"],
    ) + [
        "sqlite/go.mod",
        "sqlite/go.sum",
    ],
    visibility = ["PUBLIC"],
)

filegroup(
    name = "libp2p",
    srcs = glob(
        ["go-libp2p/**/*.go"],
        exclude = ["go-libp2p/**/*_test.go"],
    ) + [
        "go-libp2p/go.mod",
        "go-libp2p/go.sum",
    ],
    visibility = ["PUBLIC"],
)
