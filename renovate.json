{
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "ignorePaths": ["desktop/workspace-hack/**"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "languages": ["javascript"],
      "labels": ["languages::JavaScript"]
    },
    {
      "languages": ["rust"],
      "labels": ["languages::Rust"]
    },
    {
      "languages": ["golang"],
      "labels": ["languages::Go"],
      "postUpdateOptions": ["gomodTidy"]
    },
    {
      "matchPackagePatterns": ["wasmtime", "wasmtime-wasi", "wasi-common", "cranelift-codegen", "wiggle", "wasmparser"],
      "groupName": "Wasmtime packages"
    }
  ]
}
