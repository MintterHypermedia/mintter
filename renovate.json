{
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "languages": ["javascript"],
      "labels": ["languages::JavaScript"]
    },
    {
      "languages": ["rust"],
      "labels": ["languages::Rust"]
    },
    {
      "languages": ["golang"],
      "labels": ["languages::Go"],
      "postUpdateOptions": ["gomodTidy"]
    }
  ]
}
