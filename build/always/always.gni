template("always") {
  not_needed(invoker, "*")

  action(target_name) {
    out_file = "$target_out_dir/$target_name.out"
    out_file_path = rebase_path(out_file)

    script = "/bin/sh"
    args = [
      "-c",
      "date --rfc-3339=ns > $out_file_path",
    ]

    # Dummy output is needed to force this rule to run always.
    outputs = [
      out_file,
      "$target_out_dir/$target_name.dummy",
    ]
  }
}
