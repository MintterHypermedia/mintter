{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "ES5",
    "jsx": "react-jsx",
    "module": "esnext",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,

    // "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@pages/*": ["./src/pages/*"],
      "@utils/*": ["./src/utils/*"],
      "@mintter/ui-legacy/*": ["./src/lib/*"],
      "@mintter/editor/*": ["./src/editor/*"],
      "@mintter/client": ["./src/mintter-client"],
      "@mintter/hooks": ["./src/mintter-hooks"],
      "test/*": ["./src/test/*"]
      // If you configured any Snowpack aliases, add them here.
      // Add this line to get types for streaming imports (packageOptions.source="remote"):
      //     "*": [".snowpack/types/*"]
      // More info: https://www.snowpack.dev/guides/streaming-imports
    },
    // "allowSyntheticDefaultImports": true,
    // "strict": true,
    // "forceConsistentCasingInFileNames": true,
    // "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "resolveJsonModule": true,
    // "isolatedModules": true,
    "noEmit": true
  },
  "exclude": ["src/**/*.stories.*", "src/**/*.test.*"],
  "include": ["src/**/*"]
}
