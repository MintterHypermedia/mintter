{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "composite": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@mintter/ui-legacy/*": [
        "./ui/lib/*"
      ],
      "@mintter/editor/*": [
        "./src/editor/*"
      ],
      "test/*": [
        "./src/test/*"
      ]
    }
  },
  "references": [
    {
      "path": "../client/tsconfig.json"
    },
    {
      "path": "../ui/tsconfig.json"
    }
  ],
  "include": [
    "src"
  ]
}