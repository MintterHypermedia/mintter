{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*.env": true,
    "bazel-mintter/**": true
  },
  "files.watcherExclude": {
    "bazel-*/**": true
  },
  "gopls": {
    "build.directoryFilters": [
      "-node_modules",
      "-bazel-out",
      "-bazel-bin",
      "-bazel-testlogs",
      "-bazel-mintter"
    ]
  },
  "search.exclude": {
    "bazel-*/**": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.tabSize": 2
  },
  "[nix]": {
    "editor.tabSize": 2
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.organizeImports": true
  },
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSave": true
  }
}
