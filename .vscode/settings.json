{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*.env": true,
    ".git/**": true
  },
  "files.watcherExclude": {
    ".bazel/**": true,
    "plz-out/**": true,
    ".plz-cache/**": true,
    ".git/**": true
  },
  "files.associations": {
    "*.plz": "starlark",
    "*.build_defs": "starlark"
  },
  "search.exclude": {
    ".bazel/**": true,
    "plz-out/**": true,
    "**/.yarn": true,
    "**/.pnp.*": true,
    ".git/**": true
  },
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.organizeImports": true
  },

  // Please, don't set global editor tab size!
  // Keep the default and use per-language settings otherwise.
  // Don't set tab size for Go here. Go uses TAB for tabs, not spaces, so everyone
  // is willing to chose their preffered width in their local settings without disrupting the file contents.

  "[typescript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "xstate.showVisualEditorWarnings": false,

  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  },

  "gopls": {
    "build.experimentalWorkspaceModule": true,
    "build.directoryFilters": [
      "-",
      "-plz-out",
      "+backend",
      "+third_party",
      "+proto",
      "+build"
    ]
  },
  "go.lintTool": "golangci-lint",

  "python.formatting.provider": "black",
  "prettier.bracketSpacing": false
}
