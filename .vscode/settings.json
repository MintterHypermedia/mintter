{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*.env": true,
    ".git/**": true
  },
  "files.watcherExclude": {
    ".bazel/**": true,
    "plz-out/**": true,
    ".plz-cache/**": true,
    ".git/**": true
  },
  "files.associations": {
    "*.plz": "starlark",
    "*.build_defs": "starlark"
  },
  "search.exclude": {
    ".bazel/**": true,
    "plz-out/**": true,
    "**/.yarn": true,
    "**/.pnp.*": true,
    ".git/**": true
  },
  "editor.formatOnPaste": false,
  // Please, don't set global editor tab size!
  // Keep the default and use per-language settings otherwise.
  // Don't set tab size for Go here. Go uses TAB for tabs, not spaces, so everyone
  // is willing to chose their preffered width in their local settings without disrupting the file contents.
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "xstate.showVisualEditorWarnings": false,
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "[shellscript]": {
    "editor.detectIndentation": false,
    "editor.insertSpaces": false,
  },
  "gopls": {
    "build.directoryFilters": [
      "-",
      "-plz-out",
      "+backend",
      "+third_party",
      "+proto",
      "+build"
    ]
  },
  "go.lintTool": "golangci-lint",
  "python.formatting.provider": "none",
  "prettier.bracketSpacing": false,
  "editor.formatOnSave": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "github-actions.workflows.pinned.workflows": [
    ".github/workflows/test.yml"
  ],
}