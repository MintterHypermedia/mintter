{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*.env": true
  },
  "clang-format.style": "{ IndentWidth: 2, ColumnLimit: 0, BasedOnStyle: google }",
  "protoc": {
    "options": ["-I=${workspaceRoot}/proto"]
  },
  "gopls": {
    "directoryFilters": [
      "-node_modules",
      "-bazel-bin",
      "-bazel-mintter",
      "-bazel-out",
      "-bazel-testlogs",
      "-out",
      "-.git"
    ]
  }
}
